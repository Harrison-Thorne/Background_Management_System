<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.my.classtask.springboot.mapper.AdminMapper">
    <insert id="insert" parameterType="com.my.classtask.springboot.entity.Admin">
        insert into `admin` (username,password,role,name,avatar)
        value(#{username},#{password},#{role},#{name},#{avatar})
    </insert>

    <update id="updateById" parameterType="com.my.classtask.springboot.entity.Admin">
        update `admin` set username=#{username},password=#{password},role=#{role},name=#{name},avatar=#{avatar}
        where id=#{id}
    </update>

    <select id="selectAll" resultType="com.my.classtask.springboot.entity.Admin">
        select * from admin
        <where>
            <if test="name != null">name like concat('%',#{name},'%')</if>
        </where>
        order by id desc
    </select>
</mapper>